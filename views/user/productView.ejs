<script>
    async function addToCart(){
        event.preventDefault();
        const quantity = document.getElementById("qty").value;
        const productId = document.getElementById("productId").value;
        const data = {quantity , productId}

        try {
            const response = await axios.post('/addToCart' , data , {
                headers : {
                    'Content-Type' : 'application/json'
                }
            })

            if(response.status === 200){
                if(response.data.message == "Item already in the cart"){
                    Swal.fire({
                        icon: 'success',
                        title: 'Item is already in the cart',
                        showConfirmButton: true,
                        timer: 1500
                    });

                }else if(response.data.message === "Item added to the cart"){

                    Swal.fire({
                        icon: 'success',
                        title: 'Item added to cart successfully',
                        showConfirmButton: true,
                        timer: 1500     
                    });

                }else if (response.data.message === "Quantity exceeds available stock") {

                    Swal.fire({
                        icon: 'warning',
                        title: 'Out of stock',
                        text: 'The selected quantity is more than the available stock.',
                        confirmButtonText: 'OK'
                    });
                }
            }
        } catch (error) {
            console.log(error)
            if(error.response.status === 400){
                Swal.fire({
                icon: 'error',
                title: 'Out of stock',
                text: 'The selected quantity is not available.',
                confirmButtonText: 'OK'
            });

            }
            if(response.data.message === "Out of Stock"){
            

            console.log(error)
            }
        }
    }
</script>

